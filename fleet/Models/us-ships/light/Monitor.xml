<?xml version="1.0"?>

<PropertyList>


<model><name>Monitor-Light</name><path>Aircraft/fleet/Models/us-ships/light/light-cone.xml</path><condition>
  <property>controls/lighting/monitor-light</property>
 </condition><offsets><x-m>  0 </x-m><y-m>  0 </y-m><z-m> 0 </z-m>
 <heading-deg>  0 </heading-deg><pitch-deg>    -8 </pitch-deg></offsets></model>
 
 

 
 
 <animation>
    <type>rotate</type>
    <object-name>Monitor-Light</object-name>
    <property>sim/current-view/heading-offset-deg/</property>
    <condition>
         <property>/sim/current-view/internal</property>
    </condition>
    <center>
      <x-m> 0 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> 0 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

  
  <animation>
    <type>rotate</type>
    <object-name>Monitor-Light</object-name>
    <property>sim/current-view/pitch-offset-deg/</property>
    <condition>
         <property>/sim/current-view/internal</property>		 
    </condition>
    <center>
      <x-m> 0 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> 0 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0.7 </y>
      <z> 0 </z>
    </axis>
  </animation>
 
 <animation>
    <type>scale</type>
    <object-name>Monitor-Light</object-name>
    <property>sim/monitor/brightness</property>
    <x-min>1</x-min>
    <y-min>1</y-min>
    <z-min>1</z-min>
    <x-factor>5</x-factor>
    <y-factor>5</y-factor>
    <z-factor>5</z-factor>
  </animation>
 
 
 
 </PropertyList>